<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="10dp">


    <com.wang.avi.AVLoadingIndicatorView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorColor="@color/bg_login"
        app:indicatorName="BallClipRotateMultipleIndicator" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvStt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@drawable/button_text"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=". "
                android:textColor="@drawable/button_text"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHoTen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phạm Thành Tâm"
                android:textColor="@drawable/button_text"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvThoiGian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="17/02/2017"
                android:textColor="@drawable/button_text"
                android:textSize="10sp"
                android:textStyle="italic" />
        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sdsđsd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nội dung: "
                    android:textColor="#717172"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tvNoiDung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:text="Nội dung comment"
                    android:textColor="#717172" />
            </LinearLayout>

        </TableRow>
    </TableLayout>
</LinearLayout>